{
  "type": "object",
  "properties": {
    "maven": {
      "properties": {
        "configs": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "group": {
                "type": "string"
              },
              "artifact": {
                "type": "string"
              },
              "versioning": {
                "type": "string",
                "anyOf": [{ "enum": ["loose", "semver"] }, { "pattern": "^regex:" }]
              },
              "bumping": {
                "type": ["string", "null"],
                "enum": ["default", "latest"]
              }
            },
            "anyOf": ["versioning", "bumping", "group", "artifact"],
            "additionalProperties": false
          }
        }
      },
      "required": ["configs"]
    }
  }
}